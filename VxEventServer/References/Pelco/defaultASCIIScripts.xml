<ASCIIScripts>
  <Script>
	<!-- Name is not a required element -->
	<Name>Script 1</Name>
	<!-- Number must be a unique integer number to identify the script -->
	<Number>1</Number>
	<Action>
		<Name>SetLayout</Name>
		<Monitor>1</Monitor>
		<!-- valid values: "1x1", "1x2", "2x1", "2x2", "2x3", "3x2",
		"3x3", "4x3", "4x4", "1+12", "2+8", "3+4", "1+5", "1+7", 
		"12+1", "8+2", "1+4 (tall)", "1+4 (wide)" -->
		<Layout>2x2</Layout>
	</Action>
	<Action>
		<Name>DisplayCamera</Name>
		<Monitor>1</Monitor>
		<Cell>1</Cell>
		<Camera>1</Camera>
		<!-- Number of seconds in the past to seek to.  If 0, displays camera Live -->
		<PreviousSeconds>0</PreviousSeconds>
	</Action>
	<Action>
		<Name>GoToPreset</Name>
		<Camera>1</Camera>
		<Preset>PRESET1</Preset>
	</Action>
	<Action>
		<Name>BookMark</Name>
		<Camera>1</Camera>
		<Description>Script 1 BookMark</Description>
	</Action>	
  </Script>  
  <Script>
	<!-- Name is not a required element -->
	<Name>Script 2</Name>
	<!-- Number must be a unique integer number to identify the script -->
	<Number>2</Number>
	<Action>
		<Name>DisplayCamera</Name>
		<Monitor>1</Monitor>
		<Cell>1</Cell>
		<Camera>1</Camera>
		<!-- Number of seconds in the past to seek to.  If 0, displays camera Live -->
		<PreviousSeconds>60</PreviousSeconds>
	</Action>
  </Script>  
</ASCIIScripts>
